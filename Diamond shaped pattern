#include <stdio.h>

void printDiamond(int n) {

int i, j;

for (i = 1; i <= n; i++) {

for (j = 1; j <= 2 * i - 1; j++) {

printf("*");

}

printf("\n");

}

for (i = n - 1; i >= 1; i--) {

for (j = 1; j <= 2 * i - 1; j++) {

printf("*");

}

printf("\n");

}

}

int main() {

int n;

printf("Enter the number of rows for the diamond (n): ");

scanf("%d", &n);

printDiamond(n);

return 0;

}
